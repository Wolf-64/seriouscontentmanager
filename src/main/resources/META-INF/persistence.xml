<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="app">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.wlf.app.main.data.ContentEntity</class>
        <class>com.wlf.common.util.LocalDateConverter</class>
        <class>com.wlf.common.util.LocalDateTimeConverter</class>
        <class>com.wlf.common.util.FileConverter</class>
        <class>com.wlf.common.util.FileListConverter</class>
        <properties>
            <property name="eclipselink.weaving" value="false"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:files.db"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            <property name="eclipselink.logging.level" value="INFO"/>
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.target-database" value="Database"/>
        </properties>
    </persistence-unit>
</persistence>